{
  "name": "docugenius",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "2.3.0",
  "publisher": "brucevan",
  "author": {
    "name": "brucevan",
    "email": "brucevanfdm@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brucevan/docugenius"
  },
  "bugs": {
    "url": "https://github.com/brucevan/docugenius/issues"
  },
  "homepage": "https://github.com/brucevan/docugenius#readme",
  "keywords": [
    "markdown",
    "converter",
    "docx",
    "pdf",
    "excel",
    "powerpoint",
    "document",
    "auto-convert",
    "knowledge-base",
    "docugenius",
    "intelligent"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Data Science"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "documentConverter.autoConvert": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoConvert.description%"
        },
        "documentConverter.overwriteExisting": {
          "type": "boolean",
          "default": true,
          "description": "%config.overwriteExisting.description%"
        },
        "documentConverter.extractImages": {
          "type": "boolean",
          "default": true,
          "description": "%config.extractImages.description%"
        },
        "documentConverter.imageMinSize": {
          "type": "number",
          "default": 100,
          "description": "%config.imageMinSize.description%"
        },
        "documentConverter.imageFormats": {
          "type": "array",
          "default": [
            "png",
            "jpg",
            "jpeg",
            "gif",
            "bmp"
          ],
          "description": "%config.imageFormats.description%"
        },
        "documentConverter.imageNamingConvention": {
          "type": "string",
          "enum": [
            "sequential",
            "descriptive",
            "page_based"
          ],
          "default": "descriptive",
          "description": "%config.imageNamingConvention.description%",
          "enumDescriptions": [
            "%config.imageNamingConvention.sequential%",
            "%config.imageNamingConvention.descriptive%",
            "%config.imageNamingConvention.pageBased%"
          ]
        },
        "documentConverter.imageOutputFolder": {
          "type": "string",
          "default": "images",
          "description": "%config.imageOutputFolder.description%"
        },
        "documentConverter.supportedExtensions": {
          "type": "array",
          "default": [
            ".docx",
            ".xlsx",
            ".pptx",
            ".pdf"
          ],
          "description": "%config.supportedExtensions.description%"
        },
        "documentConverter.organizeInSubdirectory": {
          "type": "boolean",
          "default": true,
          "description": "%config.organizeInSubdirectory.description%"
        },
        "documentConverter.markdownSubdirectoryName": {
          "type": "string",
          "default": "DocuGenius",
          "description": "%config.markdownSubdirectoryName.description%"
        },
        "documentConverter.showSuccessNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%config.showSuccessNotifications.description%"
        },
        "documentConverter.createProjectConfig": {
          "type": "boolean",
          "default": false,
          "description": "%config.createProjectConfig.description%"
        },
        "documentConverter.copyTextFiles": {
          "type": "boolean",
          "default": false,
          "description": "%config.copyTextFiles.description%"
        },
        "documentConverter.batchConversionBehavior": {
          "type": "string",
          "enum": [
            "askForEach",
            "askOnce",
            "convertAll",
            "skipAll"
          ],
          "default": "askOnce",
          "description": "%config.batchConversionBehavior.description%",
          "enumDescriptions": [
            "%config.batchConversionBehavior.askForEach%",
            "%config.batchConversionBehavior.askOnce%",
            "%config.batchConversionBehavior.convertAll%",
            "%config.batchConversionBehavior.skipAll%"
          ]
        },
        "documentConverter.batchDetectionWindow": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "%config.batchDetectionWindow.description%"
        }
      }
    },
    "commands": [
      {
        "command": "documentConverter.convertFile",
        "title": "%command.convertFile.title%",
        "category": "DocuGenius"
      },
      {
        "command": "documentConverter.convertFolder",
        "title": "%command.convertFolder.title%",
        "category": "DocuGenius"
      },
      {
        "command": "documentConverter.enableProject",
        "title": "%command.enableProject.title%",
        "category": "DocuGenius"
      },
      {
        "command": "documentConverter.disableProject",
        "title": "%command.disableProject.title%",
        "category": "DocuGenius"
      },
      {
        "command": "documentConverter.showProjectStatus",
        "title": "%command.showProjectStatus.title%",
        "category": "DocuGenius"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "documentConverter.convertFile",
          "when": "resourceExtname =~ /\\.(docx|xlsx|pptx|pdf|txt|md|json|xml|html|csv|yaml|sql)$/ && resourceFilename != '.docugenius.json'",
          "group": "documentConverter@1"
        },
        {
          "command": "documentConverter.convertFolder",
          "when": "explorerResourceIsFolder",
          "group": "documentConverter@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^4.9.4"
  }
}
